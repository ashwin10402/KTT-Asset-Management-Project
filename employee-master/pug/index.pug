doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Login
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', rel='stylesheet')
.container
  .row.justify-content-center
    .col-md-6
      .card.my-5
        .card-body
          h5.card-title.text-center Login
          form(action='/perform_login', method='POST')
            .mb-3
              label.form-label(for='userId') User ID
              input#userId.form-control(type='text', name='userId', placeholder='Enter your ID', required='')
            .mb-3
              label.form-label(for='password') Password
              input#password.form-control(type='password', name='password', placeholder='Enter your phone number', required='')
            .d-grid
              button.btn.btn-primary(type='submit') Sign In
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
